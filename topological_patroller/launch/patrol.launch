<launch>
    <arg name="machine" default="localhost"/>
    <arg name="user" default="strands" />
    <arg name="camera_ip" default="left-cortex"/>


    <machine name="$(arg machine)" address="$(arg machine)" env-loader="/opt/strands/strands_catkin_ws/devel/env.sh" user="$(arg user)" default="true"/>

	<param name="/topological_patroller/save_sweeps" value="true" type="bool" />


    <include file="$(find topological_patroller)/launch/ptu_sweep.launch" >
        <arg name="machine" value="$(arg camera_ip)"/>
        <arg name="user" value="$(arg user)"/>
    </include>


    <include file="$(find topological_patroller)/launch/patrol_server.launch" >
        <arg name="machine" value="$(arg machine)"/>
        <arg name="user" value="$(arg user)"/>
    </include>

</launch>
