<launch>
        <node pkg="joy" type="joy_node" name="joystick"/>
        <node pkg="rumblepad_control" type="rumble_control" name="rumble_control" output="screen">
		<param name="scale_angular" value="1.0" type="double"/>
	        <param name="scale_linear" value="1.0" type="double"/>
	</node>

	<node name="map_server" pkg="map_server" type="map_server" args="$(find map_saver)/maps/map.yaml"/>

    	<node name="amcl" pkg="amcl" type="amcl" />

	<node pkg="waypoint_recorder" type="waypoint_recorder" name="waypoint_recorder">
		<param name="csv_name" value="$(find waypoint_recorder)/waypoints/waypoints.csv" type="string"/>
	</node>
</launch>
